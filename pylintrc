[BASIC]
# accept longer method names, used in things like tests (default is 30)
method-rgx=[a-z_][a-z0-9_]{1,70}$

# and shorter variable and argument names, for things like 'df'
variable-rgx=[a-z_][a-z0-9_]{1,30}$
argument-rgx=[a-z_][a-z0-9_]{1,30}$
attr-rgx=[a-z_][a-z0-9_]{1,30}$

# customize maximum arguments and local variables
max-args=10
max-locals=25

# disable tensorflow-specific errors
ignored-modules=tensorflow

[TYPECHECK]
generated-members=estimator